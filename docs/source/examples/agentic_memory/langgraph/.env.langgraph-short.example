# ==============================================================================================
# LANGGRAPH SHORT-TERM MEMORY CONFIGURATION
# ==============================================================================================

# OpenSearch domain configuration (Required)
OPENSEARCH_URL=                    # Your OpenSearch cluster endpoint
OPENSEARCH_USERNAME=               # Your OpenSearch cluster username
OPENSEARCH_PASSWORD=               # Your OpenSearch cluster password
OPENSEARCH_VERIFY_SSL=             # Whether to verify SSL certificates (true/false), defaults to false

# AWS credentials for Amazon Bedrock access (Required)
AWS_REGION=                        # Your AWS region, defaults to us-east-1
AWS_ACCESS_KEY_ID=                 # Your AWS acccess key
AWS_SECRET_ACCESS_KEY=             # Your AWS secret key
AWS_SESSION_TOKEN=                 # Your AWS session token

# Memory and model configuration (Optional)
MEMORY_CONTAINER_NAME=             # Defaults to 'langgraph_short_term'
BEDROCK_MODEL_ID=                  # Defaults to 'global.anthropic.claude-opus-4-5-20251101-v1:0'